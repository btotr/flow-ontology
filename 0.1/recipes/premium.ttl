<http://flow.recipes/ns/recipe/premium>
  a owl:Ontology ;
  spin:imports <http://topbraid.org/spin/owlrl-all> ;
  owl:imports <http://flow.recipes/ns/constraints> ;
  owl:imports <http://flow.recipes/ns/core> ;
  owl:imports fs: ;
.
premium:hummus
  a core:Recipe ;
  a owl:NamedIndividual ;
  core:instructions (
      premium:hummusRoastInstruction
      premium:hummusGrindInstruction
      premium:hummusMixInstruction
    ) ;
  <http://schema.org/prepTime> "PT10M" ;
  rdfs:label "Hummus" ;
.
premium:hummusGrindInstruction
  a core:Instruction ;
  a owl:NamedIndividual ;
  core:depVariationInstruction premium:hummusRoastInstruction ;
  core:hasComponentUnit [
      core:componentAddition "Â½" ;
      core:hasComponent fs:lemonJuice ;
    ] ;
  core:hasComponentUnit [
      core:hasComponent fs:cayennePepper ;
    ] ;
  core:hasComponentUnit [
      core:hasComponent fs:chickPea ;
    ] ;
  core:hasComponentUnit [
      core:hasComponent fs:salt ;
    ] ;
  core:hasMethod fs:grind ;
.
premium:hummusMixInstruction
  a core:Instruction ;
  a owl:NamedIndividual ;
  core:depVariationInstruction premium:hummusGrindInstruction ;
  core:hasComponentUnit [
      core:componentAddition "x-vierge" ;
      core:hasComponent fs:oliveOil ;
    ] ;
  core:hasMethod fs:mix ;
.
premium:hummusRoastInstruction
  a core:Instruction ;
  a owl:NamedIndividual ;
  core:directions "regelmatig schudden"@nl ;
  core:hasComponentUnit [
      core:hasComponent fs:sesameSeed ;
    ] ;
  core:hasMethod fs:roast ;
.
