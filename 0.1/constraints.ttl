# baseURI: http://flow.recipes/ns/constraints
# imports: http://flow.recipes/ns/core

@prefix : <http://flow.recipes/ns/constraints#> .
@prefix flow: <http://flow.recipes/ns/core#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://flow.recipes/ns/constraints>
  a owl:Ontology ;
  owl:imports <http://flow.recipes/ns/core> ;
.
flow:Instruction
  a sh:NodeShape ;
  sh:property flow:MustHaveOneMethode ;
.

flow:MustHaveOneMethode
  a sh:PropertyShape ;
  sh:path flow:hasMethod ;
  rdfs:comment "An Instruction must have a method" ;
  sh:maxCount 1 ;
  sh:minCount 1 ;
.
