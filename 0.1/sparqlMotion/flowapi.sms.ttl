# baseURI: http://flow.recipes/ns/flowapi
# imports: http://topbraid.org/sparqlmotionlib

@prefix : <http://flow.recipes/ns/flowapi#> .
@prefix arg: <http://spinrdf.org/arg#> .
@prefix dbp: <http://dbpedia.org/property/> .
@prefix dbpo: <http://dbpedia.org/ontology/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sm: <http://topbraid.org/sparqlmotion#> .
@prefix smf: <http://topbraid.org/sparqlmotionfunctions#> .
@prefix sml: <http://topbraid.org/sparqlmotionlib#> .
@prefix sp: <http://spinrdf.org/sp#> .
@prefix spin: <http://spinrdf.org/spin#> .
@prefix spl: <http://spinrdf.org/spl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://flow.recipes/ns/flowapi>
  rdf:type owl:Ontology ;
  owl:imports <http://topbraid.org/sparqlmotionlib> ;
  owl:versionInfo "simple example for sparqlMotion"^^xsd:string ;
.

:request
  rdf:type spin:Function ;
  spin:constraint [
      rdf:type spl:Argument ;
      spl:predicate :recipe ;
      spl:valueType xsd:string ;
      sm:next :response ;
    ] ;
  sm:returnModule :response ;
  rdfs:comment "the instance name is used as idenifier for the request"^^xsd:string ;
  rdfs:comment "http://localhost:8083/tbl/sparqlmotion?id=request&recipe=hummus"^^xsd:string ;
  rdfs:label "request"^^xsd:string ;
  rdfs:subClassOf sm:Functions ;
.

:response
  rdf:type sml:ReturnText ;
  sml:mimeType "text"^^xsd:string ;
  sml:text "{?recipe}, lekker he!"^^xsd:string ;
  rdfs:label "response"^^xsd:string ;
.

:recipe
  rdf:type owl:DatatypeProperty ;
  rdfs:label "recipe"^^xsd:string ;
.
